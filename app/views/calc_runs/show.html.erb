<div class=calc_runs >
  <hr>
  <table>
    <tr>
      <th class=calc_run_left_header ><%= @course %> Rankings </th>
      <th class=calc_run_right_header >Calculation Date: <%= @calc_run.date %></th>
   </tr>
  </table>
  <hr>
  <table>
    <tr>
      <td class=index>
        <table>
          <% @courses.each do |course| %>
            <tr>
              <td
                <%if course == @course %>
                  'class=selected'
                <% end %> >
                <%= course %>
              </td>
            <tr>
          <% end %>
        </table>
      </td>
      <td>
        <h2> Detailed <%= @course %> Course Results </h2>
        <table class=course_details>
          <tr><th>Rank</th><th>Runner</th><th>club</th><th></th><th>score</th><th>races</th></tr>
          <% current_gender = nil; place = 0 %>
          <% @runners.each do |r| %>
            <% if current_gender == nil %>
              <% current_gender = r.sex %>
            <% elsif current_gender != r.sex %>
              <% current_gender = r.sex %>
              <% place = 0 %>
              </table>
              <table class=course_details
                <tr><th>Rank</th><th>Runner</th><th>club</th><th></th><th>score</th><th>races</th></tr>
            <% end %>
            <tr>
              <td><%= place += 1 %> </td>
              <td><%= "#{r.firstname} #{r.surname}" %> </td>
              <td><%= r.club_description %> </td>
              <td><%= r.sex %> </td>
              <td class=score><%= '%.3f' % r.score %> </td>
              <td class=races><%= r.races %> </td>
            </tr>
          <% end %>
        </table>
      </td>
      <td class=index>
        <table>
          <tr><th>Filter Results by Club</th></tr>
          <tr>
            <td class= filter>
              <select>
                <% @clubs.each do |c| %>
                  <option value = "<%= c %>"><%= c %> </option>
                <% end %>
              </select>
        </table
      </td>
    </tr>
 </table>
</div>
<%= debug(@clubs) %>
